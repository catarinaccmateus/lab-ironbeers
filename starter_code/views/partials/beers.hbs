<div class="card " style="width: 30%">
    <img src="{{image_url}}" alt="beers" class="card-img-top w-25 rounded mx-auto d-block" style="width: 18rem">
    <div class="card-body">
        <div class="card-title font-weight-bold">{{name}}</div>
        <div class="card-title text-secondary">{{tagline}}</div>
        <div class="card-text text-justify">{{description}}</div>
        <button class="btn btn-primary m-1" onclick="window.location.href='/random-beers/{{id}}'">Link to all the
            details</button>
    </div>

</div>